@model LoginDto
@{
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="login-container p-4 card shadow-lg border border-dark">
                <!-- Logo no topo -->
                <div class="text-center mb-4">
                    <img src="~/Images/LOGO.png" alt="Campus Connect" class="img-fluid logo-img" />
                </div>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>@ViewBag.ErrorMessage</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <!-- Formulário -->
                <form method="post">
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input class="form-control @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "is-invalid" : "")" asp-for="Email" placeholder="Digite seu email">
                        <div class="invalid-feedback">
                            <span asp-validation-for="Email"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="Senha" class="form-label">Senha</label>
                        <input name="Senha" class="form-control @(ViewData.ModelState["Senha"]?.Errors.Count > 0 ? "is-invalid" : "")" type="password" asp-for="Senha" placeholder="Digite sua senha">
                        <div class="invalid-feedback">
                            <span asp-validation-for="Senha"></span>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="lembrarCheck" asp-for="LembrarDeMim" />
                        <label class="form-check-label" for="lembrarCheck">Manter conectado</label>
                    </div>

                    <div class="d-flex flex-column mb-3">
                        <button type="submit" class="btn btn-success w-100 mb-2">ENTRAR</button>
                        <a class="btn btn-primary w-100" asp-controller="Account" asp-action="Register" role="button">REGISTRAR</a>
                    </div>

                    <div class="text-center mb-3">
                        <span>Ainda não possui uma conta?</span>
                    </div>

                    <div class="text-center">
                        <a class="link" asp-controller="Account" asp-action="ForgotPassword" style="text-decoration:none">Esqueceu a sua senha?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .logo-img {
        width: 100%; /* Ajusta a largura da imagem para 100% do contêiner pai */
        max-width: 200px; /* Define uma largura máxima para a imagem */
    }
</style>

