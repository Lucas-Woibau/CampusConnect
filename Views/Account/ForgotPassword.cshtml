@{
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="login-container my-5 p-4 card shadow-lg border border-dark">
            <h2 class="text-center mb-3">Insira seu email</h2>

            @if (ViewBag.SuccessMessage != null)
            {
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@ViewBag.SuccessMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            }

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input class="form-control" name="email" value="@ViewBag.Email" />
                    <span class="text-danger">@ViewBag.EmailError</span>
                </div>

                <div class="row mb-3">
                    <div class="offset-sm-4 col d-grid">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                    <div class="col d-grid">
                        <a class="btn btn-light border" asp-controller="Account" asp-action="Login" role="button">
                            Cancelar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
